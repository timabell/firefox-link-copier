{
	"manifest_version": 2,
	"name": "Firefox Link Copier",
	"version": "1.0.0",
	"description": "Copy tab links in multiple formats (Markdown, Rich Text, Plain Text) through tab context menu",
	
	"permissions": [
		"contextMenus",
		"tabs",
		"storage",
		"clipboardWrite"
	],
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	
	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	},
	
	"applications": {
		"gecko": {
			"id": "firefox-link-copier@example.com",
			"strict_min_version": "88.0"
		}
	}
}