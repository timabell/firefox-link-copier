{
	"manifest_version": 2,
	"name": "Tim's Link Copier",
	"version": "0.0.0-git",
	"description": "Copy tab links in multiple formats (Markdown, Rich Text, Plain Text) through tab context menu",
	
	"permissions": [
		"contextMenus",
		"tabs",
		"storage",
		"clipboardWrite"
	],
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	
	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	},
	
	"author": "Tim Abell <t@0x5.uk>",
	"homepage_url": "https://github.com/timabell/firefox-link-copier",
	
	"browser_specific_settings": {
		"gecko": {
			"id": "firefox-link-copier@0x5.uk",
			"strict_min_version": "88.0"
		}
	}
}